{
  "workflowApiVersion": "1.1",
  "type": "REST",

  "metaData": {
    "icon": "https://daytime-window-check-main.vercel.app/icon.png",
    "category": "custom"
  },

  "lang": {
    "en-US": {
      "name": "Daytime Window",
      "description": "Validates daytime sending window by country"
    }
  },

  "arguments": {
    "execute": {
      "inArguments": [
        {
          "country": "{{Contact.Attribute.Default.Country}}"
        }
      ],
      "outArguments": [
        { "isWithinWindow": "" },
        { "currentHour": "" }
      ],
      "url": "https://daytime-window-check-main.vercel.app/activity/execute",
      "verb": "POST",
      "format": "json",
      "useJwt": true,
      "timeout": 20000,
      "retryCount": 3,
      "retryDelay": 1000,
      "concurrentRequests": 6
    }
  },

  "configurationArguments": {
    "save": {
      "url": "https://daytime-window-check-main.vercel.app/activity/save",
      "verb": "POST",
      "useJwt": true
    },
    "publish": {
      "url": "https://daytime-window-check-main.vercel.app/activity/publish",
      "verb": "POST",
      "useJwt": true
    },
    "validate": {
      "url": "https://daytime-window-check-main.vercel.app/activity/validate",
      "verb": "POST",
      "useJwt": true
    },
    "stop": {
      "url": "https://daytime-window-check-main.vercel.app/activity/stop",
      "verb": "POST",
      "useJwt": false
    }
  },

  "userInterfaces": {
    "configModal": {
      "url": "https://daytime-window-check-main.vercel.app/index.html",
      "height": 450,
      "width": 450
    }
  },

  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "name": "country",
            "dataType": "Text",
            "isNullable": false,
            "direction": "in",
            "access": "visible"
          }
        ],
        "outArguments": [
          {
            "name": "isWithinWindow",
            "dataType": "Boolean",
            "isNullable": false,
            "direction": "out",
            "access": "visible"
          },
          {
            "name": "currentHour",
            "dataType": "Number",
            "isNullable": false,
            "direction": "out",
            "access": "visible"
          }
        ]
      }
    }
  }
}
