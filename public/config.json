{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "https://daytime-window-check-main.vercel.app/icon.png",
    "category": "custom"
  },
  "type": "REST",
 
  "lang": {
    "en-US": {
      "name": "Daytime Window Check",
      "description": "Validates daytime sending window by country"
    }
  },
 
  "arguments": {
    "execute": {
      "inArguments": [
        {
          "country": "{{Contact.Attribute.6B122F89-193A-4C27-9B31-951E83CA6F8A.Country}}"
        }
      ],
      "outArguments": [],

      "url": "https://daytime-window-check-main.vercel.app/activity/execute",
      "verb": "POST",
      "format": "json",
      "useJwt": false,
      "timeout": 20000,
      "retryCount": 3,
      "retryDelay": 1000,
      "concurrentRequests": 6
      
    }
  },
 
  "configurationArguments": {
    "save": {
      "url": "https://daytime-window-check-main.vercel.app/activity/save",
      "verb": "POST",
       
      "useJwt": false
    },
    "publish": {
      "url": "https://daytime-window-check-main.vercel.app/activity/publish",
      "verb": "POST",
      
      "useJwt": false
    },
    "validate": {
      "url": "https://daytime-window-check-main.vercel.app/activity/validate",
      "verb": "POST",
      
      "useJwt": false
    },
    "stop": {
      "url": "https://daytime-window-check-main.vercel.app/activity/stop",
      "verb": "POST",
      
      "useJwt": false
    }
  },
 
  "userInterfaces": {
    "configModal": {
      "url": "https://daytime-window-check-main.vercel.app/index.html",
      "height": 450,
      "width": 450
    }
  },
 
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "country": {
              "dataType": "Text",
              "isNullable": false,
              "direction": "in",
              "access": "visible"
            }
          }
        ],
        "outArguments": [
          {
            "isWithinWindow": {
              "dataType": "Boolean",
              "isNullable": false,
              "direction": "out",
              "access": "visible"
            }
          },
          {
            "currentHour": {
              "dataType": "Number",
              "isNullable": false,
              "direction": "out",
              "access": "visible"
            }
          }
        ]
      }
    }
  }
}
