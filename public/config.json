{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "https://daytime-window-check-main.onrender.com/icon.png",
    "category": "custom"
  },
  "type": "REST",
 
  "lang": {
    "en-US": {
      "name": "Daytime Window Check",
      "description": "Validates daytime sending window by country"
    }
  },
 
  "arguments": {
    "execute": {
      "inArguments": [
        {
          "country": "india"
        }
      ],
      "outArguments": [
        { "isWithinWindow": false },
        { "currentHour": 0 }
      ],

      "url": "https://daytime-window-check-main.onrender.com/activity/execute",
      "verb": "POST",
      "format": "json",
      "useJwt": false,
      "timeout": 20000,
      "retryCount": 3,
      "retryDelay": 1000,
      "concurrentRequests": 6,
      "securityOptions": {
        "securityType": "securityContext",
        "securityContextKey": "f2d3391e-85c4-4c1d-b9ba-223b0a6825df"
      }
    }
  },
 
  "configurationArguments": {
    "save": {
      "url": "https://daytime-window-check-main.onrender.com/activity/save",
      "verb": "POST",
       "securityOptions": {
        "securityType": "securityContext",
        "securityContextKey": "f2d3391e-85c4-4c1d-b9ba-223b0a6825df"
      },
      "useJwt": false
    },
    "publish": {
      "url": "https://daytime-window-check-main.onrender.com/activity/publish",
      "verb": "POST",
      "securityOptions": {
        "securityType": "securityContext",
        "securityContextKey": "f2d3391e-85c4-4c1d-b9ba-223b0a6825df"
      },
      "useJwt": false
    },
    "validate": {
      "url": "https://daytime-window-check-main.onrender.com/activity/validate",
      "verb": "POST",
      "securityOptions": {
        "securityType": "securityContext",
        "securityContextKey": "f2d3391e-85c4-4c1d-b9ba-223b0a6825df"
      },
      "useJwt": false
    },
    "stop": {
      "url": "https://daytime-window-check-main.onrender.com/activity/stop",
      "verb": "POST",
      "securityOptions": {
        "securityType": "securityContext",
        "securityContextKey": "f2d3391e-85c4-4c1d-b9ba-223b0a6825df"
      },
      "useJwt": false
    }
  },
 
  "userInterfaces": {
    "configModal": {
      "url": "https://daytime-window-check-main.onrender.com/index.html",
      "height": 450,
      "width": 450
    }
  },
 
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "country": {
              "dataType": "Text",
              "isNullable": false,
              "direction": "in",
              "access": "visible"
            }
          }
        ],
        "outArguments": [
          {
            "isWithinWindow": {
              "dataType": "Boolean",
              "isNullable": false,
              "direction": "out",
              "access": "visible"
            }
          },
          {
            "currentHour": {
              "dataType": "Number",
              "isNullable": false,
              "direction": "out",
              "access": "visible"
            }
          }
        ]
      }
    }
  }
}
