{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "https://daytime-window-check-main.onrender.com/icon.png",
    "category": "custom"
  },
  "type": "REST",
  "lang": {
    "en-US": {
      "name": "Daytime Window Check",
      "description": "Validates daytime sending window by country"
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [],
      "outArguments": [],
      "url": "https://daytime-window-check-main.onrender.com/activity/execute",
      "verb": "POST",
      "format": "json",
      "useJwt": false,
      "timeout": 20000
    }
  },
  "configurationArguments": {
    "save": {
      "url": "https://daytime-window-check-main.onrender.com/activity/save"
    },
    "publish": {
      "url": "https://daytime-window-check-main.onrender.com/activity/publish"
    },
    "validate": {
      "url": "https://daytime-window-check-main.onrender.com/activity/validate"
    },
    "stop": {
      "url": "https://daytime-window-check-main.onrender.com/activity/stop"
    }
  },
  "wizardSteps": [
    {
      "label": "Configure Country",
      "key": "step1"
    }
  ],
  "userInterfaces": {
    "configModal": {
      "url": "https://daytime-window-check-main.onrender.com/index.html",
      "height": 500,
      "width": 600
    }
  },
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "country": {
              "dataType": "Text",
              "isNullable": false,
              "direction": "in"
            }
          }
        ],
        "outArguments": [
          {
            "isWithinWindow": {
              "dataType": "Boolean",
              "direction": "out"
            }
          },
          {
            "currentHour": {
              "dataType": "Number",
              "direction": "out"
            }
          }
        ]
      }
    }
  }
}
